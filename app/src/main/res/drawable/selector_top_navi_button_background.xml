<?xml version="1.0" encoding="utf-8"?>

<!-- 상단 네비게이션 바 [버튼 배경 디자인]-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 버튼 배경 디자인(선택 되었을 경우)-->
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:state_checked="true">

        <shape android:shape="rectangle">
            <stroke android:color="@color/dh_purple" android:width="1dp"/>
            <solid android:color="@color/dh_purple" />
        </shape>
    </item>

    <item
        android:top="2dp"
        android:bottom="2dp"
        android:state_checked="false"
        android:state_pressed="true">

        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" />
        </shape>

    </item>
</selector>