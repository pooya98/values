<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Fragment_02_01">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:text="분야를 선택하세요"
                    android:textColor="@color/dh_black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="일러스트"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                        <CheckBox
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="브랜딩"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                        <CheckBox
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="회화"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"

                        android:orientation="horizontal">

                        <CheckBox
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:text="영상"
                            android:textSize="13dp"
                            android:layout_weight="1"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                        <CheckBox
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="사진"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                        <CheckBox
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="제품"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="조형"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                        <CheckBox
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="공예"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                        <CheckBox
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="기타"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_marginRight="5dp"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="최대 2개까지 선택가능"
                    android:textColor="@color/dh_purple"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="전시 공간을 선택하세요"
                    android:textColor="@color/dh_black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/LinearLayout_pick_space"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/selector_checkbox_gray_to_purple"
                    android:paddingVertical="20dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="30dp"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_add_circle">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:text="전시공간 선택"
                        android:layout_marginHorizontal="2dp"></TextView>


                </LinearLayout>





                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:text="전시 기간을 선택하세요"
                    android:textColor="@color/dh_black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_calenderview">

                    <com.andrewjapar.rangedatepicker.CalendarPicker
                        android:layout_marginHorizontal="18dp"
                        android:layout_marginVertical="5dp"
                        android:id="@+id/calendar_view"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:clipToPadding="false"
                        android:scrollbarStyle="outsideOverlay"
                        app:picker_type="range"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6/20"
                        android:textSize="18dp"
                        android:textColor="@color/dh_purple"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 부터 "
                        android:textSize="18dp"
                        android:textColor="@color/dh_black"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6/24"
                        android:textSize="18dp"
                        android:textColor="@color/dh_purple"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 기간동안 전시가 "
                        android:textSize="18dp"
                        android:textColor="@color/dh_black"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가능해요!"
                        android:textSize="18dp"
                        android:textColor="@color/dh_purple"
                        android:textStyle="bold"></TextView>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.98"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="다시 설정"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/dh_white"
                android:background="@drawable/button_background_gray"
                android:layout_marginHorizontal="5dp">
            </Button>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="조회하기"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/dh_white"
                android:background="@drawable/button_background_purple"
                android:layout_marginHorizontal="5dp">


            </Button>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>