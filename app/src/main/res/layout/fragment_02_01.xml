<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Fragment_02_01">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp"
                    android:text="분야를 선택하세요"
                    android:textColor="@color/dh_black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkbox_illustrate"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="일러스트"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                        <CheckBox
                            android:id="@+id/checkbox_branding"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="브랜딩"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                        <CheckBox
                            android:id="@+id/checkbox_painting"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="회화"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"

                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkbox_video"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:text="영상"
                            android:textSize="13dp"
                            android:layout_weight="1"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                        <CheckBox
                            android:id="@+id/checkbox_photo"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="사진"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                        <CheckBox
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="제품"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="조형"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                        <CheckBox
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="공예"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                        <CheckBox
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="3dp"
                            android:layout_weight="1"
                            android:text="기타"
                            android:textSize="13dp"
                            android:button="@android:color/transparent"
                            android:textColor="@drawable/selector_checkbox_text_gray_to_purple"
                            android:background="@drawable/selector_checkbox_gray_to_purple"></CheckBox>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_marginRight="5dp"
                    android:gravity="right|center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="최대 2개까지 선택가능"
                    android:textColor="@color/dh_purple"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:text="전시 공간을 선택하세요"
                    android:textColor="@color/dh_black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:id="@+id/fragment_02_01_space_pick"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@drawable/selector_checkbox_gray_to_purple"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_add_circle">

                        </ImageView>

                        <TextView
                            android:id="@+id/pickedSpaceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="2dp"
                            android:gravity="center"
                            android:text="전시공간 선택"
                            android:textSize="15dp"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_02_01_space_selected"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:orientation="horizontal"
                        android:paddingVertical="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:background="@drawable/selector_checkbox_gray_to_purple"
                        android:visibility="invisible">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="8dp"
                            android:layout_gravity="center_vertical">

                            <ImageView
                                android:id="@+id/fragment_02_01_imageview_space_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/image_exhibition"
                                android:scaleType="centerCrop"></ImageView>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/fragment_02_01_textview_space_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VALUES경산"
                                android:textSize="18dp"
                                android:textColor="@color/dh_black"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/fragment_02_01_textview_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="경상북도 경산시 "
                                android:textSize="14dp"
                                android:textColor="@color/dh_gray"
                                android:textStyle="bold">

                            </TextView>
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"></View>

                        <ImageButton
                            android:id="@+id/fragment_02_01_button_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_cancel_gray"
                            android:background="@color/transparance"></ImageButton>

                    </LinearLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>






                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:text="전시 기간을 선택하세요"
                    android:textColor="@color/dh_black"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_calenderview">

                    <com.andrewjapar.rangedatepicker.CalendarPicker
                        android:id="@+id/calendar_view"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginHorizontal="18dp"
                        android:layout_marginVertical="5dp"
                        android:clipToPadding="false"
                        android:scrollbarStyle="outsideOverlay"
                        app:picker_type="range" />

                </LinearLayout>



                <View
                    android:id="@+id/view3"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.98"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="다시 설정"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/dh_white"
                android:background="@drawable/button_background_gray"
                android:layout_marginHorizontal="5dp">
            </Button>

            <Button
                android:id="@+id/fragment_02_01_Search_Button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="조회하기"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/dh_white"
                android:background="@drawable/button_background_purple"
                android:layout_marginHorizontal="5dp">


            </Button>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>